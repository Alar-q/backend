<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../layouts/header');-%>
</head>

<body>
  <!-- Main navbar -->
  <%-include('../layouts/navbar');-%>

  <main>
    <section>
      <div class="container py-5">
        <div class="row d-flex justify-content-center align-items-center">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
              <div class="card-body p-5 text-center">

                <h3 class="mb-5">Change password</h3>
                <form action="/users/patch" method="POST">
                  <label class="form-label" for="username">Username</label>
                  <input type="text" id="username" class="form-control form-control-lg" name="username"/>

                  <label class="form-label" for="old_password">Old Password</label>
                  <input type="text" id="old_password" class="form-control form-control-lg" name="old_password"/>

                  <label class="form-label" for="new_password">New Password</label>
                  <input type="text" id="new_password" class="form-control form-control-lg" name="new_password"/>

                  <br>

                  <button class="btn btn-primary btn-lg btn-block" type="submit">Change</button>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

</body>

</html>
