<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../layouts/header');-%>
</head>

<body>
  <!-- Main navbar -->
  <%-include('../layouts/navbar');-%>
  
  <main>
    <section>
      <div class="container py-5">
        <div class="row d-flex justify-content-center align-items-center">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
              <div class="card-body p-5 text-center">

                <h3 class="mb-5">Sign Up</h3>

                <form action="/auth/register" method="POST">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control form-control-lg" type="text" id="username" name="username"/>

                    <label class="form-label" for="email">Email</label>
                    <input class="form-control form-control-lg" type="text" id="email" name="email"/>

                    <label class="form-label" for="password">Password</label>
                    <input class="form-control form-control-lg" type="text" id="password" name="password"/>

                    <br>

                    <button class="btn btn-primary btn-lg btn-block" type="submit">
                      Register
                    </button>
                </form>

                <hr class="my-4">
                <a href="/auth/login">
                  <button class="btn btn-lg btn-block btn-primary" style="background-color:  #dd4b39;">Sign In
                  </button>
                </a><br>

                <%- include('../auth/google') %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

</body>

</html>
