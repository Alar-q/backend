<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../layouts/header');-%>
</head>

<body>
  <!-- Main navbar -->
  <%-include('../layouts/navbar');-%>

  <!-- DAUREN -->
  <!-- ROUND-BODY -->
  <div style="width:100%; height:1rem ; background-color:#142850; z-index:-1;">
    <div style="background-color:white; border-radius:50px 50px 0 0; width:100%; height:100%;"></div>
  </div>

  <%-include('../layouts/menu');-%>

  <main>
    <div class="container" style="text-align: center;">
      <% for(let i = 0; i < products.length; i++){ %>
        <div class="card mx-auto" style="width: 18rem;" >
          <img class="card-img-top" src="<%= '/img/' + products[i].image %>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">
              <%= products[i].username + "'s: " + products[i].title %>
            </h5>
            <p class="card-text">
              <%= products[i].body %>
            </p>
            <a href="#" class="btn btn-primary">Add to cart</a>
<!--            <form></form>-->
          </div>
        </div>
      <% } %>
    </div>
  </main>


  <!-- ROUND-END-BODY -->
  <div style="width:100%; height:1rem ; background-color:#142850; z-index:-1;">
    <div style="background-color:white; border-radius: 0 0 50px 50px; width:100%; height:100%;"></div>
  </div>


  <!-- BEIBARYS -->
  <!-- footer -->
  <%-include('../layouts/footer');-%>>


  <!--SCRIPTS-->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
  <!-- DAUREN -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="/assets/scripts/index.js" charset="utf-8"></script>
  <!-- BEIBARYS -->
  <script src="/assets/scripts/biba.js" charset="utf-8"></script>


  <!-- ALAR -->
  <script src="/assets/scripts/click.js"></script>
  <script>setClickListener("/assets/sounds/click.mp3")</script>
</body>

</html>
